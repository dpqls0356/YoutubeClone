mixin video(video)
    a(href=`/videos/${video.id}`).video-mixin
        div.video-mixin__img
            img(src=`/${video.thumbUrl}` style="width:100%;height:100%")
        //- div.video-mixin__img(style=`background-image:url(${video.thumbUrl});background-size:cover;background-position:center`)
        div.video-mixin__data
            p.video-mixin__title=video.title
            div.video-mixin__meta
                span #{video.owner.name || user.name} • 
                span #{video.meta.views} 회
