extends ../base
include ../mixins/video
block content
    div.profile-box
        div.user-info
            if(user.socialOnly) 
                img(src=user.avatarUrl).user-avatar
            else
                img(src="/"+user.avatarUrl, crossorigin="use-credentials").user-avatar
            span=user.name
        div.view_small_video
            each video in user.videos
                +video(video)
