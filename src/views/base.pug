doctype html
html(lang="ko")
    head    
        link(rel="stylesheet", href="https://unpkg.com/mvp.css@1.12/mvp.css")
        title #{pageTitle} | YouTube Clone
    body 
        header
            if userObj.loggedIn
                small Hello #{userObj.username}
            nav 
                ul
                    if userObj.loggedIn
                        li 
                            a(href="/logout") Logout
                    else
                        li  
                            a(href="/login") Login
                    li
                        a(href="/videos/upload") Upload
            h1=pageTitle
        main 
            block content
        include partials/footer.pug