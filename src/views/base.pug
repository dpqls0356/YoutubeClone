doctype html
html(lang="ko")
    head    
        link(rel="stylesheet", href="https://unpkg.com/mvp.css@1.12/mvp.css")
        title #{pageTitle} | YouTube Clone
    body 
        header
            if loggedIn
                small Hello #{user.name}
            nav 
                ul
                    if loggedIn 
                        li 
                            a(href="/users/logout") Logout
                        li  
                            a(href=`/users/${user._id}`) #{user.name}Ïùò Profile
                        li
                            a(href="/users/edit") Profile Edit
                        li
                            a(href="/videos/upload") Upload
                    else
                        li  
                            a(href="/login") Login
                        li
                            a(href="/join") Join
                    li
                        a(href="/") Home
                    li
                        a(href="/search") Search

            h1=pageTitle
        main 
            block content
        include partials/footer.pug
        script(src="/assets/js/main.js")