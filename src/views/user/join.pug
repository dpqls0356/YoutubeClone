extends ../base

block content
    div.accountformbox
        form.accountform(action="")
            input(type="text", required, placeholder="이름을 입력하시오",name="username")
            input(type="text", required, placeholder="아이디를 입력하시오",name="id")
            input(type="password", required, placeholder="비밀번호를 입력하시오",name="password")
            input(type="password", required, placeholder="비밀번호를 입력하시오",name="checkingpassword")
            input(type="email", required, placeholder="이메일을 입력하시오",name="email")
            input( type="date",data-placeholder="생년월일",required)
            input(id = "joinBtn" type="submit",value="join")
            button.kakao-btn
                a(href="")
                    p Kakao로 가입하기
            button.gmail-btn
                a(href="")
                    p Gmail로 가입하기
        div.go-login
            a(href="/login") 이미 계정이 있으신가요 ? 로그인 &rarr;
    

                
    