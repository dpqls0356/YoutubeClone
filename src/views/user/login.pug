extends ../base

block content
    div.accountformbox.box
        if emailErrorMessage
            span=emailErrorMessage
        form.accountform(action="/login",method="POST")
            if idErrorMessage
                div #{idErrorMessage}
            input(type="text", placeholder="아이디를 입력하시오",name="id")
            if pwErrorMessage
                div #{pwErrorMessage}
            input(type="password", placeholder="비밀번호를 입력하시오",name="password")
            input(id = "joinBtn" type="submit",value="login")
            div.kakao-btn
                a(href="/users/kakao/start")
                    p Kakao로 로그인하기
            div.gmail-btn
                a(href="")
                    p Gmail로 로그인하기
            div.github-btn
                a(href="/users/github/start")
                    p Github으로 로그인하기
        div.go-join
            a(href="/join") 계정이 없으신가요 ? 계정 만들기 &rarr;